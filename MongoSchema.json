                    "bsonType": "object",
                    "required": [
                        "GAMES_PLAYED",
                        "USER_ID",
                        "PLATFORM_STATUS",
                        "PROFILE_BANNER",
                        "PROFILE_PIC",
                        "LOCATION",
                        "TEAM_STATUS",
                        "BIO",
                        "CREATED_AT",
                        "USER_NAME",
                        "TAGLINE"
                    ],
                    "properties": {
                        "GAMES_PLAYED": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "GAME_RELATED_INFO": {
                            "bsonType": "object"
                        },
                        "HISTORY": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "object",
                                "required": [
                                    "ROLES_PLAYED",
                                    "DURATION",
                                    "TEAM_NAME",
                                    "TEAM_ID",
                                    "GAME_NAME"
                                ],
                                "properties": {
                                    "ROLES_PLAYED": {
                                        "bsonType": "array",
                                        "items": {
                                            "bsonType": "string"
                                        }
                                    },
                                    "DURATION": {
                                        "bsonType": "string"
                                    },
                                    "TEAM_NAME": {
                                        "bsonType": "string"
                                    },
                                    "TEAM_ID": {
                                        "bsonType": "string"
                                    },
                                    "GAME_NAME": {
                                        "bsonType": "string"
                                    }
                                }
                            }
                        },
                        "USER_ID": {
                            "bsonType": "string"
                        },
                        "PLATFORM_STATUS": {
                            "bsonType": "string"
                        },
                        "PROFILE_BANNER": {
                            "bsonType": "string"
                        },
                        "PROFILE_PIC": {
                            "bsonType": "string"
                        },
                        "LOCATION": {
                            "bsonType": "string"
                        },
                        "TEAM_STATUS": {
                            "bsonType": "string"
                        },
                        "SOCIAL_LINKS": {
                            "bsonType": "object",
                            "required": [
                                "INSTAGRAM",
                                "DISCORD",
                                "TWITTER",
                                "LINKEDIN",
                                "WEBSITE",
                                "YOUTUBE"
                            ],
                            "properties": {
                                "INSTAGRAM": {
                                    "bsonType": "string"
                                },
                                "DISCORD": {
                                    "bsonType": "string"
                                },
                                "TWITTER": {
                                    "bsonType": "string"
                                },
                                "LINKEDIN": {
                                    "bsonType": "string"
                                },
                                "WEBSITE": {
                                    "bsonType": "string"
                                },
                                "YOUTUBE": {
                                    "bsonType": "string"
                                }
                            }
                        },
                        "BIO": {
                            "bsonType": "string"
                        },
                        "CREATED_AT": {
                            "bsonType": "date"
                        },
                        "USER_NAME": {
                            "bsonType": "string"
                        },
                        "TAGLINE": {
                            "bsonType": "string"
                        }
                    }
                }
            },
            "validationLevel": "strict",
            "validationAction": "error"
        },

        {
            "name": "MENTOR_PROFILE",
            "validator": {
                "$jsonSchema": {
                    "bsonType": "object",
                    "required": [
                        "GAMES",
                        "MENTOR_ID",
                        "PROFILE_BANNER",
                        "PROFILE_PIC",
                        "LOCATION",
                        "BIO",
                        "EXPERIENCE_YEARS",
                        "PRICE_PER_SESSION",
                        "SOCIAL_LINKS",
                        "CREATED_AT",
                        "TAGLINE",
                        "RATING",
                        "VERIFIED",
                        "SESSIONS_COMPLETED",
                        "SUCCESS_RATE",
                        "SPECIALITIES",
                        "LANGUAGES",
                        "USER_NAME"
                    ],
                    "properties": {
                        "GAMES": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "MENTOR_ID": {
                            "bsonType": "string"
                        },
                        "PROFILE_BANNER": {
                            "bsonType": "string"
                        },
                        "PROFILE_PIC": {
                            "bsonType": "string"
                        },
                        "LOCATION": {
                            "bsonType": "string"
                        },
                        "EXPERIENCE_YEARS": {
                            "bsonType": "number"
                        },
                        "PRICE_PER_SESSION": {
                            "bsonType": "number"
                        },
                        "SOCIAL_LINKS": {
                            "bsonType": "object",
                            "required": [
                                "INSTAGRAM",
                                "DISCORD",
                                "TWITTER",
                                "LINKEDIN",
                                "WEBSITE",
                                "YOUTUBE"
                            ],
                            "properties": {
                                "INSTAGRAM": {
                                    "bsonType": "string"
                                },
                                "DISCORD": {
                                    "bsonType": "string"
                                },
                                "TWITTER": {
                                    "bsonType": "string"
                                },
                                "LINKEDIN": {
                                    "bsonType": "string"
                                },
                                "WEBSITE": {
                                    "bsonType": "string"
                                },
                                "YOUTUBE": {
                                    "bsonType": "string"
                                }
                            }
                        },
                        "CREATED_AT": {
                            "bsonType": "date"
                        },
                        "BIO": {
                            "bsonType": "string"
                        },
                        "TAGLINE": {
                            "bsonType": "string"
                        },
                        "AVAILABILITY": {
                            "bsonType": "string",
                            "enum": [
                                "Available",
                                "Booked",
                                "Away"
                            ]
                        },
                        "GAMES_MENTORED": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "SPECIALTIES": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "SPECIALITIES": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "SKILL_TAGS": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "ESPORTS_BACKGROUND": {
                            "bsonType": "string"
                        },
                        "RATING": {
                            "bsonType": "number"
                        },
                        "VERIFIED": {
                            "bsonType": "bool"
                        },
                        "SESSIONS_COMPLETED": {
                            "bsonType": "number"
                        },
                        "SUCCESS_RATE": {
                            "bsonType": "number"
                        },
                        "LANGUAGES": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "USER_NAME": {
                            "bsonType": "string"
                        }
                    }
                }
            },
            "validationLevel": "strict",
            "validationAction": "error"
        },

        {
            "name": "CHAT_INFO",
            "validator": {
                "$jsonSchema": {
                    "bsonType": "object",
                    "required": [
                        "CHAT_ID",
                        "Participants"
                    ],
                    "properties": {
                        "CHAT_ID": {
                            "bsonType": "string",
                            "description": "Unique identifier for the chat"
                        },
                        "Participants": {
                            "bsonType": "array",
                            "description": "List of participant IDs",
                            "items": {
                                "bsonType": "string",
                                "description": "Each participant is represented by a string ID"
                            },
                            "minItems": 1
                        }
                    }
                }
            },
            "validationLevel": "strict",
            "validationAction": "error"
        },

        {
            "name": "CHAT_MESSAGES",
            "validator": {
                "$jsonSchema": {
                    "bsonType": "object",
                    "required": [
                        "LAST_MESSAGE",
                        "MESSAGES"
                    ],
                    "properties": {
                        "LAST_MESSAGE": {
                            "bsonType": "string",
                            "description": "The most recent message text"
                        },
                        "MESSAGES": {
                            "bsonType": "array",
                            "description": "List of all messages in the chat",
                            "items": {
                                "bsonType": "object",
                                "required": [
                                    "SENDER_ID",
                                    "MESSAGE",
                                    "TIMESTAMP"
                                ],
                                "properties": {
                                    "SENDER_ID": {
                                        "bsonType": "string",
                                        "description": "User ID of the sender"
                                    },
                                    "MESSAGE": {
                                        "bsonType": "string",
                                        "description": "The message content"
                                    },
                                    "TIMESTAMP": {
                                        "bsonType": "date",
                                        "description": "Date and time the message was sent"
                                    }
                                }
                            },
                            "minItems": 1
                        }
                    }
                }
            },
            "validationLevel": "strict",
            "validationAction": "error"
        },
        
        {
            "name": "TEAMS",
            "validator": {
                "$jsonSchema": {
                    "bsonType": "object",
                    "required": [
                        "NAME",
                        "SHORT_NAME",
                        "TAGLINE",
                        "TEAM_SIZE",
                        "PARTICIPANTS",
                        "TEAM_LOGO",
                        "TEAM_DESCRIPTION",
                        "GAME",
                        "TEAM_ID",
                        "MILESTONES",
                        "EVENTS_ENROLLED"
                    ],
                    "properties": {
                        "NAME": {
                            "bsonType": "string"
                        },
                        "SHORT_NAME": {
                            "bsonType": "string"
                        },
                        "TAGLINE": {
                            "bsonType": "string"
                        },
                        "TEAM_SIZE": {
                            "bsonType": "int"
                        },
                        "PARTICIPANTS": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "object",
                                "required": [
                                    "ACCESS",
                                    "USER_ID"
                                ],
                                "properties": {
                                    "ACCESS": {
                                        "bsonType": "string",
                                        "enum": ["ADMIN", "MEMBER"]
                                    },
                                    "USER_ID": {
                                        "bsonType": "string"
                                    }
                                }
                            }
                        },
                        "TEAM_LOGO": {
                            "bsonType": "string"
                        },
                        "TEAM_DESCRIPTION": {
                            "bsonType": "string"
                        },
                        "GAME": {
                            "bsonType": "string"
                        },
                        "TEAM_ID": {
                            "bsonType": "string"
                        },
                        "MILESTONES": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "object",
                                "required": [
                                    "MILESTONE_ID",
                                    "MILESTONE_NAME",
                                    "MILESTONE_DESCRIPTION",
                                    "MILESTONE_DATE"
                                ],
                                "properties": {
                                    "MILESTONE_ID": {
                                        "bsonType": "string"
                                    },
                                    "MILESTONE_NAME": {
                                        "bsonType": "string"
                                    },
                                    "MILESTONE_DESCRIPTION": {
                                        "bsonType": "string"
                                    },
                                    "MILESTONE_DATE": {
                                        "bsonType": "date"
                                    }
                                }
                            }
                        },
                        "EVENTS_ENROLLED": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "object",
                                "required": [
                                    "EVENT_ID"
                                ],
                                "properties": {
                                    "EVENT_ID": {
                                        "bsonType": "string"
                                    }
                                }
                            }
                        },
                        "CREATED_AT": {
                            "bsonType": "date"
                        }
                    }
                }
            },
            "validationLevel": "strict",
            "validationAction": "error"
        }
    ]
}