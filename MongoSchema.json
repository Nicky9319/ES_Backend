{
    "database": "ES",
    "collections": [
        {
            "name": "EVENTS",
            "validator": {
                "$jsonSchema": {
                    "bsonType": "object",
                    "required": [
                        "DESCRIPTION",
                        "EVENT_DATE",
                        "EVENT_ID",
                        "EVENT_NAME",
                        "REGISTRATION_DEADLINE",
                        "VENUE",
                        "ELIGIBILITY",
                        "GAME_TYPE",
                        "GAME",
                        "CONSOLE",
                        "PRIZE_POOL",
                        "LOCATION",
                        "FORMAT",
                        "IMAGE",
                        "NUMBER_OF_MEMBERS",
                        "NUMBER_OF_TEAMS",
                        "CREATED_AT",
                        "ORGANIZER"
                    ],
                    "properties": {
                        "CONTACT_INFO": {
                            "bsonType": "object",
                            "required": [
                                "EMAIL",
                                "MOBILE_NUMBER"
                            ],
                            "properties": {
                                "EMAIL": {
                                    "bsonType": "string",
                                    "description": "User's email address"
                                },
                                "MOBILE_NUMBER": {
                                    "bsonType": "long",
                                    "description": "User's mobile number"
                                }
                            }
                        },
                        "DESCRIPTION": {
                            "bsonType": "string"
                        },
                        "EVENT_DATE": {
                            "bsonType": "date"
                        },
                        "EVENT_ID": {
                            "bsonType": "string"
                        },
                        "EVENT_NAME": {
                            "bsonType": "string"
                        },
                        "GAME_TYPE": {
                            "bsonType": "string"
                        },
                        "GAME": {
                            "bsonType": "string"
                        },
                        "CONSOLE": {
                            "bsonType": "string"
                        },
                        "PRIZE_POOL": {
                            "bsonType": "string"
                        },
                        "LOCATION": {
                            "bsonType": "string"
                        },
                        "FORMAT": {
                            "bsonType": "string"
                        },
                        "IMAGE": {
                            "bsonType": "string",
                            "description": "Must be a URI"
                        },
                        "QUESTIONNAIRE": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "object",
                                "required": [
                                    "QUESTION",
                                    "ID"
                                ],
                                "properties": {
                                    "ID": {
                                        "bsonType": "string",
                                        "description": "Unique identifier for each questionnaire item"
                                    },
                                    "QUESTION": {
                                        "bsonType": "string"
                                    },
                                    "ANSWER": {
                                        "bsonType": "string"
                                    }
                                }
                            }
                        },
                        "FAQ": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "object",
                                "required": [
                                    "QUESTION",
                                    "ANSWER"
                                ],
                                "properties": {
                                    "QUESTION": {
                                        "bsonType": "string"
                                    },
                                    "ANSWER": {
                                        "bsonType": "string"
                                    }
                                }
                            }
                        },
                        "NUMBER_OF_MEMBERS": {
                            "bsonType": "int"
                        },
                        "NUMBER_OF_TEAMS": {
                            "bsonType": "int"
                        },
                        "REGISTRATION_DEADLINE": {
                            "bsonType": "date"
                        },
                        "VENUE": {
                            "bsonType": "string"
                        },
                        "ELIGIBILITY": {
                            "bsonType": "array",
                            "items": {
                                "bsonType": "string"
                            }
                        },
                        "CREATED_AT": {
                            "bsonType": "date"
                        },
                        "ORGANIZER": {
                            "bsonType": "string"
                        }
                    }
                }
            },
            "validationLevel": "strict",
            "validationAction": "error"
        },

        {
            "name": "USER_PROFILE",
